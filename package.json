    "react-dom": "^18.1.0",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.30.0",
    "react-lazyload": "^3.2.0",
    "react-modal": "^3.15.1",
    "react-router-dom": "^6.3.0",
    "react-select": "^5.3.2",
    "react-toastify": "^8.1.1",
    "recursive-copy": "^2.0.14",
    "simple-vdf": "^1.1.1",
    "styled-components": "^5.3.3",
    "upath": "^2.0.1",
    "zustand": "^3.7.2"
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "browserslist": [],
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  }
}

{
  "name": "FireSave",
  "description": "Saves manager",
  "version": "0.1.2",
  "author": "Ciberusps",
  "license": "MIT",
  "main": "main/index.js",
  "productName": "FireSave",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "devn": "next dev renderer",
    "build-renderer": "next build renderer && next export renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run clean && npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "publish": "npm run dist -- --win --publish always",
    "type-check": "tsc",
    "lint": "eslint . --ext ts --ext tsx --ext js"
  },
  "dependencies": {
    "@sentry/browser": "^5.30.0",
    "@sentry/electron": "^2.5.4",
    "@sentry/node": "^5.30.0",
    "@sentry/webpack-plugin": "^1.18.3",
    "axios": "^0.21.4",
    "base64url": "^3.0.1",
    "date-fns": "^2.27.0",
    "electron-google-analytics": "^1.0.2",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.6.1",
    "faker": "^5.5.3",
    "find-process": "^1.4.7",
    "glob": "^7.2.0",
    "nanoid": "^3.1.30",
    "next": "^10.2.3",
    "node-cron": "^2.0.3",
    "node-machine-id": "^1.1.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.4",
    "react-hook-form": "^6.15.8",
    "react-lazyload": "^3.2.0",
    "react-toastify": "^6.2.0",
    "react-use": "^15.3.8",
    "screenshot-desktop": "^1.12.7",
    "simple-vdf": "^1.1.1",
    "styled-components": "^5.3.3",
    "universal-analytics": "^0.4.23"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/electron-store": "^3.2.0",
    "@types/faker": "^5.5.9",
    "@types/find-process": "^1.2.0",
    "@types/glob": "^7.2.0",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^14.18.0",
    "@types/node-cron": "^2.0.5",
    "@types/react": "^16.14.21",
    "@types/react-dom": "^16.9.14",
    "@types/react-lazyload": "^3.1.1",
    "@types/styled-components": "^5.1.18",
    "@types/universal-analytics": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-plugin-styled-components": "^1.13.3",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.27.1",
    "rimraf": "^3.0.0",
    "typescript": "^4.5.4"
  },
  "build": {
    "appId": "gg.ciberus.firesave",
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ],
    "extraResources": [
      "./assets/**"
    ],
    "win": {
      "publish": [
        "github"
      ],
      "asarUnpack": [
        "node_modules/screenshot-desktop/lib/win32"
      ]
    }
  }
}

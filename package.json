{
  "name": "FireSave",
  "description": "Saves manager",
  "version": "0.1.1",
  "author": "Ciberusps",
  "license": "MIT",
  "main": "main/index.js",
  "productName": "FireSave",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer && next export renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run clean && npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "publish": "npm run dist -- --win --publish always",
    "type-check": "tsc"
  },
  "dependencies": {
    "@sentry/electron": "^2.0.4",
    "axios": "^0.21.1",
    "base64url": "^3.0.1",
    "date-fns": "^2.16.1",
    "electron-google-analytics": "^1.0.2",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "faker": "^5.1.0",
    "find-process": "^1.4.4",
    "glob": "^7.1.6",
    "next": "^10.0.4",
    "node-cron": "^2.0.3",
    "node-machine-id": "^1.1.12",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-lazyload": "^3.1.0",
    "react-use": "^15.3.8",
    "screenshot-desktop": "^1.12.3",
    "simple-vdf": "^1.1.1",
    "styled-components": "^5.2.1",
    "universal-analytics": "^0.4.23"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/electron-store": "^3.2.0",
    "@types/faker": "^5.1.5",
    "@types/find-process": "^1.2.0",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.14.6",
    "@types/node-cron": "^2.0.3",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "@types/react-lazyload": "^3.0.0",
    "@types/styled-components": "^5.1.7",
    "@types/universal-analytics": "^0.4.4",
    "babel-plugin-styled-components": "^1.12.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "rimraf": "^3.0.0",
    "typescript": "^4.0.5"
  },
  "build": {
    "appId": "gg.ciberus.firesave",
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ],
    "extraResources": [
      "./assets/**"
    ],
    "win": {
      "publish": [
        "github"
      ],
      "asarUnpack": [
        "node_modules/screenshot-desktop/lib/win32"
      ]
    }
  }
}
